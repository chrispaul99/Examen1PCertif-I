@model IEnumerable<BEUBiblioteca.Libro>


    <h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Añadir nuevo libro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.autores)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_publi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nro_ejem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria1.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.autores)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isbn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_publi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nro_ejem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria1.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idLibro }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.idLibro }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idLibro })
        </td>
    </tr>
}

</table>
